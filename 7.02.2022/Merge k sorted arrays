#include<iostream>
#include<algorithm>
#include<array>
using namespace std;

int main()
{
array<int,5> a;
array<int,5> b;
array<int,5> c;
array<int,15> d;

cout<<"Enter first array 5 elements\n";
for(int i=0;i<5;i++)
   {cin>>a[i];
    d[i]=a[i];
   }

cout<<"\nEnter first array 5 elements\n";
for(int i=0;i<5;i++)
   {cin>>b[i];
    d[i+5]=b[i];
   }

cout<<"\nEnter third array 5 elements\n";
for(int i=0;i<5;i++)
    {cin>>c[i];
      d[i+10]=c[i];
    }

sort(d.begin(),d.end());
cout<<"Sorted array = ";
for(int i=0;i<15;i++)
    cout<<d[i]<<" ";
return 0;
}
